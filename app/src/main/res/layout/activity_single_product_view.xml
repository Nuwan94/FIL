<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProductView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/side_nav_bar" />

            <LinearLayout
                android:id="@+id/layoutProductChoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleeve Style" />

                <Spinner
                    android:id="@+id/spinnerSleeveStyle"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/sleeve_style_array"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collar Size" />

                <Spinner
                    android:id="@+id/spinnerCollarSize"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/collar_size_array"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Material" />

                <Spinner
                    android:id="@+id/spinnerMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/material_array"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color" />

                <Spinner
                    android:id="@+id/spinnerColor"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/color_array"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collar Type" />

                <Spinner
                    android:id="@+id/spinnerCollarType"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/collar_type_array_ladies"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tailor/ Tailor Shop" />

                <Spinner
                    android:id="@+id/spinnerTailor"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/tailor_array"
                    android:spinnerMode="dialog" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnProductAddToCart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/filColor"


                        android:text="Add to Cart"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnProductBuyNow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/filColor"
                        android:text="Buy it Now"
                        android:textColor="@android:color/white" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutProductAdded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:padding="20dp"
                    android:text="Item Added to Cart!"
                    android:textAlignment="center"
                    android:textColor="@color/filColor"
                    android:textSize="36sp" />

                <Button
                    android:id="@+id/btnProductGoToCart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/filColor"
                    android:text="Go To Cart"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnProductShopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/filColor"
                    android:text="Continue Shopping"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>